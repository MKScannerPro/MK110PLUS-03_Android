<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_ffffff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/blue_0188cc">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="onBack"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="BXP-Button"
            android:textColor="@color/white_ffffff"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/iv_save"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:onClick="onSave"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:src="@drawable/ic_save" />
    </RelativeLayout>


    <CheckBox
        android:id="@+id/cb_enable"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:button="@null"
        android:drawableRight="@drawable/selector_cb_btn"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="BXP- button" />

    <View style="@style/divider_line" />

    <CheckBox
        android:id="@+id/cb_single_press_mode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:button="@null"
        android:drawableRight="@drawable/selector_cb_btn"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Single press mode" />

    <View style="@style/divider_line" />

    <CheckBox
        android:id="@+id/cb_double_press_mode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:button="@null"
        android:drawableRight="@drawable/selector_cb_btn"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Double press mode" />

    <View style="@style/divider_line" />

    <CheckBox
        android:id="@+id/cb_long_press_mode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:button="@null"
        android:drawableRight="@drawable/selector_cb_btn"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Long press mode" />

    <View style="@style/divider_line" />

    <CheckBox
        android:id="@+id/cb_abnormal_inactivity_mode"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:button="@null"
        android:drawableRight="@drawable/selector_cb_btn"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Abnormal inactivity mode" />

    <View style="@style/divider_line" />
</LinearLayout>
